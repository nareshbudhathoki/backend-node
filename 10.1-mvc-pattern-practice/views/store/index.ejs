<%-include("../partials/head.ejs")%>
<body class="bg-gray-100 font-sans">

  <!-- Header -->
    <%- include("../partials/nav") %>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 py-10">
    <section class="text-center">
      <h2 class="text-3xl font-semibold mb-6 text-gray-800">Welcome to Airbnb</h2>
      <p class="text-gray-600 mb-6">List your home and start hosting guests around the world.</p>
      <a href="/host/add-home" class="inline-block bg-red-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-red-700 transition">
        Add Your Home
      </a>
    </section>

    <!-- Home List Cards -->
<section class="mt-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  <% registeredHomes.forEach(home => { %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <img src="<%=home.imageUrl %>" alt="Home" class="w-full h-48 object-cover">
      <div class="p-4">
        <h3 class="font-semibold text-lg mb-1"><%=home.houseName%></h3>
        <p class="text-gray-600 text-sm mb-2"><%=home.location%></p>

        <!-- Price and rating in one row -->
        <div class="flex items-end justify-between mt-3">
          <p class="text-gray-900 font-semibold leading-none tracking-tight">
            <span class="text-lg">$<%=home.pricePerNight%></span>
            <span class="text-xs text-gray-500 ml-1">/night</span>
          </p>
          <div class="flex items-center gap-1 px-2 py-1 rounded-full bg-amber-100">
            <span class="text-yellow-500 text-sm leading-none">&#9733;</span>
            <span class="text-green-700 font-semibold text-sm leading-none"><%=home.rating%></span>
          </div>
        </div>

        <!-- Book Button -->
        <div class="mt-4">
          <a href="/book/<%= home.houseName %>" 
             class="block w-full text-center bg-blue-600 text-white text-sm font-medium py-2 rounded-md hover:bg-blue-700 transition">
            Book Now
          </a>
        </div>

      </div>
    </div>
  <% }) %>
</section>
  </main>
<!-- footer sections -->
 <%- include("../partials/footer") %>
</body>
</html>
