<%-include("partials/head.ejs")%>
<body class="bg-gray-100 font-sans">

  <!-- Header -->
    <%- include("partials/header") %>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 py-10">
    <section class="text-center">
      <h2 class="text-3xl font-semibold mb-6 text-gray-800">Welcome to Airbnb</h2>
      <p class="text-gray-600 mb-6">List your home and start hosting guests around the world.</p>
      <a href="/host/add-home" class="inline-block bg-red-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-red-700 transition">
        Add Your Home
      </a>
    </section>

    <!-- Example Cards -->
<section class="mt-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  <% registeredHomes.forEach(home => { %>

    <div class="bg-white-500 rounded-lg shadow-md overflow-hidden">
      <img src="<%=home.imageUrl %>" alt="Home" class="w-full h-48 object-cover">
     <div class="p-4">
      <h3 class="font-semibold text-lg mb-1"><%=home.houseName%></h3>
      <p class="text-gray-500 text-sm"><%=home.houseAddress%></p>
    </div>
    </div>

  <%}) %>

</section>
  </main>
<!-- footer sections -->
 <%- include("partials/footer") %>
</body>
</html>
