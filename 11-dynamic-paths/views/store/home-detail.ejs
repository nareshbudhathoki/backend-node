<%- include("../partials/head.ejs") %>

<body class="bg-gray-50 text-gray-800">
  <%- include("../partials/nav.ejs") %>

  <main class="mx-auto max-w-6xl px-4 py-8">
    <div class="mb-6">
      <h1 class="mb-2 text-3xl font-semibold"><%= home.houseName %></h1>
      <div class="flex items-center gap-3 text-sm text-gray-600">
        <span><span class="text-yellow-500">&#9733;</span> <%= home.rating %> &middot; 128 reviews</span>
        <span>&middot; <%= home.location %></span>
      </div>
    </div>

    <div class="mb-10 grid grid-cols-1 gap-2 overflow-hidden rounded-xl md:grid-cols-4">
      <div>
        <img
          src="<%= home.imageUrl %>"
          alt="<%= home.houseName %>"
          class="h-full w-full object-cover"
        >
      </div>
    </div>

    <div class="grid grid-cols-1 gap-10 lg:grid-cols-3">
      <div class="space-y-8 lg:col-span-2">
        <section class="flex flex-col gap-4 pb-6 md:flex-row md:items-center md:justify-between">
          <div>
            <h2 class="text-xl font-semibold">Entire villa hosted by Sarah</h2>
            <p class="mt-1 flex flex-wrap items-center gap-2 text-gray-600">
              <span>6 guests</span>
              <span>&middot;</span>
              <span>3 bedrooms</span>
              <span>&middot;</span>
              <span>4 beds</span>
              <span>&middot;</span>
              <span>3 baths</span>
            </p>
          </div>

          <%- include("../partials/favourite.ejs", { home: home }) %>
        </section>
      </div>

      <aside>
        <!-- You can add pricing, booking info, etc. here -->
      </aside>
    </div>
  </main>

  <%- include("../partials/footer") %>
</body>
</html>
