<%- include('../partials/head') %>
  <body>
    <%- include("../partials/nav")%>
  <div class="bg-gray-100 font-sans flex items-center justify-center min-h-screen">
    <div class="bg-white rounded-xl shadow-lg p-8 w-full max-w-md">
      
      <!-- Header -->
      <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">
        Register Your Home
      </h2>

      <!-- Form -->
      <form action="/host/add-home" method="POST" class="space-y-4">
        
        <!-- House Name -->
        <div>
          <label class="block text-gray-700 mb-1">House Name</label>
          <input
            type="text"
            name="houseName"
            placeholder="Enter house name"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600"
            required
          />
        </div>

        <!-- House Address -->
        <div>
          <label class="block text-gray-700 mb-1">House Address</label>
          <input
            type="text"
            name="location"
            placeholder="Enter full address"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600"
            required
          />
        </div>

         <!-- Price Per Night -->
        <div>
          <label class="block text-gray-700 mb-1">Price Per Night</label>
          <input
            type="number"
            name="pricePerNight"
            placeholder="Enter price per night"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600"
            required
          />
        </div>

         <!-- Rating -->
        <div>
          <label class="block text-gray-700 mb-1">Rating</label>
          <input
            type="number"
            name="rating"
            min="1"
            max="5"
            placeholder="Enter rating (1-5)"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600"
            required
          />
        </div>

        <!-- Image URL -->
        <div>
          <label class="block text-gray-700 mb-1">Image URL</label>
          <input
            type="url"
            name="imageUrl"
            placeholder="https://source.unsplash.com/..."
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600"
            required
          />
        </div>

        <!-- Submit -->
        <div class="text-center pt-2">
          <button
            type="submit"
            class="bg-red-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-red-700 transition"
          >
            Add Home
          </button>
        </div>

      </form>
    </div>
    </div>
    <%-include("../partials/footer.ejs")%>
  </body>
</html>
